<?xml version='1.0' encoding='utf-8'?>
<widget id="be.tommoore.airnote" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="WikitudePlugin">
        <param name="android-package" value="com.wikitude.phonegap.WikitudePlugin" />
    </feature>
    <allow-intent href="market:*" />
    <name>Airnote</name>
    <description>
        Airnote captures and shares spontaneous thoughts with an in worldly touch.
    </description>
    <author email="hello@tommoore.be" href="http://cordova.io">
        tommoore.be
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="img/icon.png" />
</widget>
